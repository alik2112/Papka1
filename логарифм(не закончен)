#include <iostream>
#include <cstdint>

int int_log2(int n) {
    if (n <= 0) return -1;
    unsigned int un = static_cast<unsigned int>(n);
    int log = 0;
    while (un > 1) {
        un >>= 1;
        log++;
    }
    return log;
}
int main() {
    std::cout << "Целая часть log2 для int:" << '\n';
    std::cout << "log2(15) = " << int_log2(15) << '\n';
    std::cout << "log2(16) = " << int_log2(16) << '\n';
}
